generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  email      String      @unique
  createdAt  DateTime    @default(now())
  id         String      @id @default(uuid())
  personId   String?
  address    Address?
  education  Education[]
  experience Experience?
  person     Person?     @relation(fields: [personId], references: [id])
}

model Person {
  id         String  @id @default(uuid())
  firstName  String?
  lastName   String?
  middleName String?
  phone      String?
  summary    String?
  User       User[]
}

model Address {
  id           String         @id @default(uuid())
  country      String?
  state        String?
  city         String?
  addressLine1 String?
  addressLine2 String?
  zipCode      String?
  userId       String?     @unique
  experienceId Int?        @unique
  experience   Experience? @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  School       School[]
}

model Experience {
  id               Int      @id @default(autoincrement())
  name             String?
  responsibilities String[]
  startYear        String?
  endYear          String?
  startMonth       String?
  endMonth         String?
  userId           String   @unique
  address          Address?
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Education {
  id             String      @id @default(uuid())
  educationLevel String
  userId         String?
  User           User?    @relation(fields: [userId], references: [id])
  school         School[]
}

model School {
  id          Int        @id @default(autoincrement())
  school      String
  diploma     String
  startYear   String?
  endYear     String?
  startMonth  String?
  endMonth    String?
  educationId String?
  addressId   String?
  address     Address?   @relation(fields: [addressId], references: [id])
  education   Education? @relation(fields: [educationId], references: [id])
}

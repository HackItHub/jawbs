{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["server/**/**/*", "prisma/**/**/*", "./index.ts"],
  "exclude": ["node_modules", "dist"]
}
